<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/round_stroke_8dp_light_blue"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            style="@style/normaltxt_14sp_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorVariantHighlight"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="6dp"

            android:textColor="@color/textBlackSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_gradient">


            <TextView
                android:id="@+id/tvTimeLeft"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/time_left_drawable"
                android:drawablePadding="4dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="00m 00s"
                android:textColor="#FF6B35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="4dp"
                android:text="00:00"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimeLeft" />

            <TextView
                android:id="@+id/tvBottomTitle"
                style="@style/normaltxt_14sp_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"

                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvTime" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="#EBF2F0"
                app:layout_constraintTop_toBottomOf="@id/tvBottomTitle" />

            <LinearLayout
                style="@style/normaltxt_10sp_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="10dp"
                android:text="MEGA â‚¹ 1.2 Lakhs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewDivider">

                <TextView
                    android:id="@+id/tvtotalMarks"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/marks_right_icon"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Marks"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvBottomQuestion"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Questions"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/question_mark" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvBottomTime"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Mins"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/clock" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvBottomNegativeMark"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Marks"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/marks_wrong_icon" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>