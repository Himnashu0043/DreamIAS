<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/round_stroke_8dp_black"
    app:cardCornerRadius="8dp">

    <FrameLayout
        android:id="@+id/flPremium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blur_drawable"
        android:elevation="2dp"
        android:visibility="visible">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tvPremium"
            style="@style/normaltxt_12sp_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_bg"
            android:drawableStart="@drawable/crown"
            android:drawablePadding="8dp"
            android:paddingHorizontal="20dp"
            android:text="Premium"
            android:visibility="visible"
            android:textColor="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTitle"
            style="@style/normaltxt_14sp_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorVariantHighlight"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="6dp"
            android:textColor="@color/textBlackSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_gradient">


            <TextView
                android:id="@+id/tvTimeLeft"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/time_left_drawable"
                android:drawablePadding="4dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="00m 00s"
                android:textColor="@color/colorSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="4dp"
                android:text="07:00 pm"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTimeLeft" />

            <TextView
                android:id="@+id/tvBottomTitle"
                style="@style/normaltxt_14sp_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/tvTime" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"
                android:background="#EBF2F0"
                app:layout_constraintTop_toBottomOf="@id/tvBottomTitle" />

            <LinearLayout
                style="@style/normaltxt_10sp_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:padding="10dp"
                android:text="MEGA ₹ 1.2 Lakhs"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewDivider">

                <TextView
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawableStart="@drawable/trophy"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="₹0"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvBottomQuestion"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Questions"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/question_mark" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvBottomTime"
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0 Mins"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/clock" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    style="@style/normaltxt_11sp_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:drawablePadding="4dp"
                    android:gravity="top"
                    android:text="0%"
                    android:textColor="@color/white"
                    app:drawableStartCompat="@drawable/trophy_ranking" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>