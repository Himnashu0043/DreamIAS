<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:strokeColor="#E4F6FF"
    app:strokeWidth="1dp"
    android:background="@drawable/round_stroke_8dp_light_blue"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tvTitle"
            style="@style/normaltxt_14sp_bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorVariantHighlight"
            android:paddingHorizontal="@dimen/dp_10"
            android:paddingVertical="6dp"
            android:text="IAS-Geography Full length Test"
            android:textColor="@color/textBlackSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvTimeLeft"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:descendantFocusability="blocksDescendants"
            android:layout_marginEnd="10dp"
            android:background="@drawable/time_left_drawable"
            android:drawablePadding="4dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="00m 00s"
            android:textColor="@color/colorSecondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="4dp"
            android:text="00:00 pm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTimeLeft" />

        <TextView
            android:id="@+id/tvBottomTitle"
            style="@style/normaltxt_14sp_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:text="Comprehensive Full length test of Geography"
            app:layout_constraintTop_toBottomOf="@id/tvTime" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#E4F6FF"
            app:layout_constraintTop_toBottomOf="@id/tvBottomTitle" />

        <TextView
            android:id="@+id/textView80"
            style="@style/normaltxt_10sp_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/stroke_gradient"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="MEGA â‚¹ 1.2 Lakhs"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/viewDivider" />

        <TextView
            android:id="@+id/tvContestCount"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawableStart="@drawable/contests"
            android:drawablePadding="4dp"
            android:drawableTint="@color/colorSecondary"
            android:text="3 Contests"
            android:textColor="@color/colorSecondary"
            app:layout_constraintBottom_toBottomOf="@+id/textView80"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>