<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    >

    <TextView
        android:id="@+id/tvQuestionNumber"
        style="@style/normaltxt_16sp_Semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Question 1"
        android:textColor="@color/colorSecondary"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tvQuestion"
        style="@style/normaltxt_12sp_Semibold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="The nature"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestionNumber" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_question_drawable"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/ra1"
                android:layout_width="26dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:buttonTint="@color/colorSecondary"
                android:visibility="visible" />


            <TextView
                android:id="@+id/tvOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Answer One"
                android:textColor="@color/text_color_quiz"
                app:drawableStartCompat="@drawable/selector_quiz_question_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_question_drawable"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <RadioButton
                android:id="@+id/ra2"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:buttonTint="@color/colorSecondary"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Answer One"
                android:textColor="@color/text_color_quiz"
                app:drawableStartCompat="@drawable/selector_quiz_question_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_question_drawable"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main2">

            <RadioButton
                android:id="@+id/ra3"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:buttonTint="@color/colorSecondary"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Answer One"
                android:textColor="@color/text_color_quiz"
                app:drawableStartCompat="@drawable/selector_quiz_question_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_question_drawable"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/main3">

            <RadioButton
                android:id="@+id/ra4"
                android:layout_width="26dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:buttonTint="@color/colorSecondary"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:text="Answer One"
                android:textColor="@color/text_color_quiz"
                app:drawableStartCompat="@drawable/selector_quiz_question_icon" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOptions"
        tools:itemCount="4"
        tools:listitem="@layout/item_answer_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingVertical="12dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion" />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>