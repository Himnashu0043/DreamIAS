<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clToolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/back_img"
            app:layout_constraintBottom_toBottomOf="@+id/tvTittle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvTittle"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tvTittle"
            style="@style/normaltxt_16sp_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="IAS -Geography Full length Test"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/tvTitle"
        style="@style/normaltxt_14sp_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/dp_20"
        android:paddingVertical="6dp"
        android:text="IAS-Geography Full length Test"
        android:textColor="@color/textBlackSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clToolbar" />


    <RelativeLayout
        android:id="@+id/rlContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clJoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvTotalAmount"
                style="@style/normaltxt_14sp_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:text="₹10 Lakh"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="4dp"
                android:progress="40"
                app:circularflow_radiusInDP="2dp"
                app:indicatorColor="@color/colorSecondary"
                app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
                app:trackColor="#DFDFFF"
                app:trackCornerRadius="3dp" />

            <TextView
                android:id="@+id/tvSpotLeft"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:gravity="top"
                android:text="6,11,540 Spots Left"
                android:textColor="@color/colorSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/indicator" />

            <TextView
                android:id="@+id/tvSpotCount"
                style="@style/normaltxt_11sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:gravity="top"
                android:text="13,60,554 Spots"
                android:textColor="#939393"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/indicator" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOffer"
                style="@style/normaltxt_16sp_Medium"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_bg_green"
                android:drawablePadding="4dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp"
                android:text="Join ₹15"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSpotCount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clAlreadyJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="visible">

            <View
                android:id="@+id/viewDividerTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="#E4F6FF"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPricePool"
                style="@style/normaltxt_12sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="Price Pool"
                android:textColor="#939393"
                app:layout_constraintEnd_toStartOf="@id/tvSpots"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewDividerTop" />

            <TextView
                android:id="@+id/tvSpots"
                style="@style/normaltxt_12sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Spots"
                android:textColor="#939393"
                app:layout_constraintEnd_toStartOf="@id/tvEntry"
                app:layout_constraintStart_toEndOf="@id/tvPricePool"
                app:layout_constraintTop_toBottomOf="@id/viewDividerTop" />

            <TextView
                android:id="@+id/tvEntry"
                style="@style/normaltxt_12sp_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:text="Entry"
                android:textColor="#939393"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvSpots"
                app:layout_constraintTop_toBottomOf="@id/viewDividerTop" />


            <TextView
                android:id="@+id/tvPricePoolValue"
                style="@style/normaltxt_12sp_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="₹ 10 Lakh"
                app:layout_constraintEnd_toStartOf="@id/tvSpotsValue"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvPricePool" />

            <TextView
                android:id="@+id/tvSpotsValue"
                style="@style/normaltxt_12sp_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="1,500"
                app:layout_constraintEnd_toStartOf="@id/tvEntryValue"
                app:layout_constraintStart_toEndOf="@id/tvPricePoolValue"
                app:layout_constraintTop_toBottomOf="@id/tvSpots" />

            <TextView
                android:id="@+id/tvEntryValue"
                style="@style/normaltxt_12sp_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:text="₹ 15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tvSpotsValue"
                app:layout_constraintTop_toBottomOf="@id/tvEntry" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llInfo"
        style="@style/normaltxt_10sp_Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorVariantHighlight"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rlContent">

        <TextView
            android:id="@+id/tvbottomPrice"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/trophy"
            android:drawablePadding="4dp"
            android:drawableTint="#00527D"
            android:gravity="top"
            android:text="₹1000"
            android:textColor="#00527D" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvbottomQuestion"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="4dp"
            android:drawableTint="#00527D"
            android:gravity="top"
            android:text="30 Questions"
            android:textColor="#00527D"
            app:drawableStartCompat="@drawable/question_mark" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvbottomtime"
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="4dp"
            android:drawableTint="#00527D"
            android:gravity="top"
            android:text="10 Mins"
            android:textColor="#00527D"
            app:drawableStartCompat="@drawable/clock" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            style="@style/normaltxt_11sp_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:drawablePadding="4dp"
            android:drawableTint="#00527D"
            android:gravity="top"
            android:text="60%"
            android:textColor="#00527D"
            app:drawableStartCompat="@drawable/trophy_ranking" />


    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/llInfo"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorSecondary"
        app:tabIndicatorFullWidth="true"
        app:tabIndicatorGravity="bottom"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabSelectedTextAppearance="@style/tab_text_selected_medium"
        app:tabSelectedTextColor="@color/colorSecondary"
        app:tabTextAppearance="@style/tab_text"
        app:tabTextColor="@color/dark_gray" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>