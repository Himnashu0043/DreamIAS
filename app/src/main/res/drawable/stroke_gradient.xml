<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="8dp"/>
            <gradient
                android:angle="360"
                android:startColor="#E7B56F"
                android:endColor="#FFFFFFFF"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="#FFF1DE"
                android:endColor="#FFFFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>