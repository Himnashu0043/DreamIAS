<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="100dp" android:height="100dp" />
                    <corners android:radius="16dp" />
                    <gradient android:endColor="#106B52" android:startColor="#0F4435" />
                </shape>
            </item>
            <item android:bottom="32dp" android:drawable="@drawable/male" android:end="32dp" android:start="32dp" android:top="32dp" />
        </layer-list>
    </item>

    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="100dp" android:height="100dp" />
                    <stroke android:width="1dp" android:color="#F0F0F0" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:bottom="32dp" android:drawable="@drawable/male_dark" android:end="32dp" android:start="32dp" android:top="32dp" />
        </layer-list>
    </item>

</selector>